.titleBar {
  height: 200rpx;
  padding: 0rpx 0rpx 0rpx 20rpx;
  display: flex;
  font-size: 50rpx;
  justify-content: flex-start;
  align-items: center;
}
.orderedList .detailDish {
  display: flex;
  width: 750rpx;
  height: 180rpx;
  font-size: 36rpx;
  padding: 0rpx 10rpx 0rpx 10rpx;
  box-sizing: border-box;
}
.orderedList .detailDish .detailDishPic {
  display: flex;
  width: 150rpx;
  box-sizing: border-box;
  padding: 10rpx 10rpx 0rpx 10rpx;
}
.orderedList .detailDish .detailDishPic .pic {
  border-radius: 10rpx;
}
.orderedList .detailDish .detailDishInfo {
  width: 550rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 0rpx 10rpx 0rpx 10rpx;
}
.orderedList .detailDish .detailDishInfo .detailDishName {
  flex: 2;
}
.orderedList .detailDish .detailDishInfo .detailDishPayment {
  flex: 3;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.orderedList .detailDish .detailDishInfo .detailDishPayment .detailDishNumbers,
.orderedList .detailDish .detailDishInfo .detailDishPayment .detailDishPrice {
  display: flex;
  width: 40rpx;
  justify-content: center;
  align-items: center;
}
.nextStep {
  display: flex;
  justify-content: space-around;
  font-size: 50rpx;
  padding: 20rpx;
}
.nextStep .returnOrder {
  background-color: #cbe2ff;
  color: #505050;
  border-radius: 10rpx;
  padding: 30rpx;
}
.nextStep .submitOrder {
  background-color: #5c5cff;
  color: #ececec;
  border-radius: 10rpx;
  padding: 30rpx;
}
.success {
  display: flex;
  padding: 20rpx;
  font-size: 40rpx;
  justify-content: center;
}
