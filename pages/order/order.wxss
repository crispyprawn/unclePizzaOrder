/* pages/order/order.wxss */
page {
  height: 100%;
}

.whole {
  display: flex;
  flex-direction: column;
  height: 100%;
  overflow: hidden;
}

.kindName {
  height: 100rpx;
  /* background-color: burlywood; */
  display: flex;
  align-items: center;
  font-size: 40rpx;
  padding: 0rpx 20rpx 0rpx 20rpx;
}

.dish {
  display: flex;
  width: 550rpx;
  height: 240rpx;
  font-size: 36rpx;
}

.dishPic {
  display: flex;
  width: 200rpx;
  box-sizing: border-box;
  padding: 10rpx 10rpx 0rpx 10rpx;
}

.dishInfo {
  width: 320rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 0rpx 10rpx 0rpx 10rpx;
}

.dishName {
  flex: 2;
}

.dishSales {
  font-size: 30rpx;
  flex: 4;
}

.dishPayment {
  flex: 3;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dishCounter {
  display: flex;
}

.dishMinus,
.dishPlus,
.dishServes {
  display: flex;
  width: 40rpx;
  justify-content: center;
  align-items: center;
}

.pic {
  border-radius: 10rpx;
}

.carousel {
  display: flex;
  width: 750rpx;
  height: 300rpx;
  background-color: thistle;
  flex: 0 0 auto;
}

swiper {
  width: 100%;
  height: 100%;
}

.swiperBox {
  display: flex;
  width: 300rpx;
}

.catagories {
  display: flex;
  width: 200rpx;
  flex-direction: column;
  background-color: rgb(169, 231, 233);
  font-size: 30rpx;
}

.catagories .active {
  background-color: white;
}

.catagory {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 200rpx;
  height: 80rpx;
}


.orderArea {
  display: flex;
  flex-direction: row;
  flex: 1 1 auto;
  overflow: auto;
}

.checkout {
  display: flex;
  height: 100rpx;
  flex: 0 0 auto;
}

.checkoutBasic {
  display: flex;
  align-items: center;
  width: 100%;
}

.shoppingCart {
  flex: 1;
  display: flex;
  position: relative;
  width: 200rpx;
}

.cartIcon {
  display: flex;
  width: 200rpx;
  transform: translate(-15rpx, -10rpx) scale(0.85);
}

.cartRedDot {
  display: flex;
  height: 50rpx;
  min-width: 50rpx;
  background-color: red;
  border-radius: 25rpx;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: white;
  transform: translate(-65rpx, 30rpx);
}

.totalPrice {
  flex: 2;
}

.goToPay {
  flex: 1;
  padding: 10rpx;
  height: 80rpx;
}

.payButton {
  width: 100%;
  height: 100%;
  background-color: rgb(110, 159, 250);
  color: white;
  text-align: center;
  line-height: 80rpx;
  border-radius: 40rpx;
}